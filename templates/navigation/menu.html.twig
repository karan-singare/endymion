{% macro menu_links(items, attributes, menu_level) %}
  {% import _self as menus %}
  {% if items %}
    {% if menu_level == 0 %}
      <br><nav><ul{{ attributes }}>
    {% else %}
      <br><nav><ul>
    {% endif %}
    {% for item in items %}
        <li{{ item.attributes }} class="navigation-list-terms">
          {{ link(item.title, item.url) }}
          {% if item.below %}
            {{ menus.menu_links(item.below, attributes, menu_level + 1) }}
          {% endif %}
        </li>
    {% endfor %}
  </ul></nav>
  {% endif %}
{% endmacro %}
